<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="org.gnuzero.pub.pituwa.SignupFragment">

    <TextView
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="පිටුව ජාලයට එක්වන්න"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dip"
        android:background="#356cb5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#fff"
            android:weightSum="1">

            <TextView
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="පහතින් facebook ජාලයට සමග හෝ"
                android:gravity="left"
                android:padding="5dp"
                android:textSize="13dp"
                android:textStyle="bold" />

            <com.facebook.login.widget.LoginButton
                xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_button"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                fb:login_text="මුහුනුපොතේ සම්බන්ධ කරමු"
                fb:logout_text="මුහුනුපොතේ සම්බන්ධ කරමු"
                android:background="#356cb5"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="2dip"
                android:background="#356cb5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header3"
                android:text="පහතින් සෘජුව username සහ password සෙටි කරගන්න"
                android:gravity="left"
                android:padding="5dp"

                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="භාවිත නාමය"
                android:ems="10"
                android:layout_marginTop="1dp"
                android:maxLength="24"
                android:id="@+id/signupUsername" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="ඔබේ නම"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:maxLength="24"
                android:id="@+id/signupFullname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="රහස්පදය (password)"
                android:id="@+id/signupPassword"
                android:layout_marginTop="10dp"
                android:maxLength="20"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="่ඉ-තැපැල් ලිපිනය"
                android:ems="10"
                android:maxLength="64"
                android:layout_marginTop="10dp"
                android:id="@+id/signupEmail" />
            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_height="2dip"
                android:background="#356cb5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header5"
                android:text="3. register බොත්තම ඔබන්න"
                android:gravity="left"
                android:padding="5dp"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="හදුනාගැනීම (Register)"
                android:id="@+id/signupJoinHowBtn"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:background="@drawable/app_layout_background"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="පිටුව භාවිතයේදී සැලකිය යුතු "
                    android:id="@+id/textView1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="වගකීම්"
                    android:id="@+id/SignupLabelTerms"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/light_blue" />

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:layout_height="2dip"
                android:background="#356cb5" />

        </LinearLayout>



    </ScrollView>

</LinearLayout>